<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.uiwidgettest.MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="36dp"
        android:textColor="@android:color/holo_blue_light"
        android:text="这是一个TextView" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Button"/>

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:hint="输入一些内容"/>

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_1"/>
    <Button
        android:id="@+id/bt_change_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="改变图片"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"/>
    <Button
        android:id="@+id/bt_progessbar_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="改变进度条可见状态"/>
    <Button
        android:id="@+id/bt_progressbar_progress_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="改变进度条的进度"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorAccent"/>

    <Button
        android:id="@+id/bt_alterdialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="点击弹出AlertDialog"/>

    <Button
        android:id="@+id/bt_progressdialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="点击弹出ProessDialog"/>

</LinearLayout>
